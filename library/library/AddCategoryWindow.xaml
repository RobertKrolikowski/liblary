<Window x:Class="library.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        Title="addCategoryWindow" Height="300" Width="400" SizeToContent="WidthAndHeight" FontSize="20" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="categoryBlock" Text="Category:"
                   Grid.Column="1" Grid.Row="1" Margin="5"/>
        <TextBox x:Name="categoryBox" Grid.Column="2" Grid.Row="1"
                 Margin="5" MinWidth="200"/>
        <Button x:Name="addButton" Grid.Column="2"
                Grid.Row="2" Content="Add" Margin="5" MaxWidth="100" Click="addButton_Click"/>
        <Button x:Name="backButton" Grid.Column="3" 
                Grid.Row="2" Content="Back" Margin="5" MaxWidth="100" Click="backButton_Click"/>
    </Grid>
</Window>
